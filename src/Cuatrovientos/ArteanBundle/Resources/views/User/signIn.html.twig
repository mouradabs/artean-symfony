
{# src/Cuatrovientos/ArteanBundle/Resources/views/Center/new.html.twig #}
{% extends "CuatrovientosArteanBundle:Default:layout.html.twig" %}
{% block title %}Sign In{% endblock %}
{% block body %}

<h2>Entrar en artean</h2>
{% if error %}
    <div>{{ error}}</div>
{% endif %}
<form method="post" action="{{ path('cuatrovientos_artean_user_signin_save') }}">
        {{ form_errors(form) }}
    <div class="form-group">
      <i class="fa fa-envelope" aria-hidden="true"></i>  {{ form_label(form.login) }}
        {{ form_errors(form.login) }}
        {{ form_widget(form.login, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
     <i class="fa fa-key" aria-hidden="true"></i>   {{ form_label(form.password) }}
        {{ form_errors(form.password) }}
        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
    </div>
        {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}
    <div class="form-group">
        {{ form_row(form._token) }}
        {{ form_widget(form.save, {'attr': {'class': 'form-control'}}) }}
    </div>
</form>

{% endblock %}